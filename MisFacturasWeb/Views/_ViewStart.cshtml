@using Microsoft.AspNetCore.Http
@{
    string SessionKeyShowLayout = "ShowLayout";
    string ValueCotext = "";
    bool showLayout = false;
    ValueCotext = Context.Session.GetString(SessionKeyShowLayout);
    if (string.IsNullOrWhiteSpace(ValueCotext))
    {
        showLayout = true;
    }
    else
    {
        Boolean.TryParse(ValueCotext, out showLayout);
    }
    if (showLayout)
    {
        Layout = "~/Views/Shared/_LayoutFull.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }



}
